#:kivy 1.9.1


GameScreenManager:

<GameScreenManager@ScreenManager>:
    energy_game: energygame
    state: 'main_menu'
    Screen:
        name: 'main_menu'
        FloatLayout:
            size: root.size
            pos: root.pos
            Label:
                text: 'Welcome to Energy Game'
                size_hint: (.3, .3)
                pos_hint: {'x': .35, 'y': .65}
            Button:
                text: 'Play Game'
                size_hint: (.3, .3)
                pos_hint: {'x': .35, 'y': .35}
                on_press: app.set_state('main_game')
    Screen:
        name: 'main_game'
        EnergyGame:
            id:energygame


